---
layout: layouts/base.njk
---

<div class="container">
    <article style="max-width: 800px; margin: 0 auto; padding: 2rem 0;">
        <div style="text-align: center; margin-bottom: 3rem; padding-bottom: 2rem; border-bottom: 2px solid var(--parchment);">
            <p style="text-transform: uppercase; letter-spacing: 2px; font-size: 0.85rem; color: var(--warm-brown); margin-bottom: 1rem;">Press Release</p>
            <h1 style="font-family: 'Playfair Display', serif; font-size: clamp(1.8rem, 4vw, 2.5rem); color: var(--deep-brown); margin-bottom: 1rem; line-height: 1.3;">{{ title }}</h1>
            <p style="font-size: 1rem; color: var(--warm-brown);">{{ date | date('MMMM D, YYYY') }}</p>
        </div>

        <div style="line-height: 1.9; font-size: 1.05rem;">
            {{ content | safe }}
        </div>

        <div style="margin-top: 4rem; padding-top: 2rem; border-top: 2px solid var(--parchment); text-align: center;">
            <a href="/press/" style="color: var(--aged-gold); text-decoration: none; font-weight: 600; font-size: 1.05rem;">
                ‚Üê Back to Press Room
            </a>
        </div>
    </article>
</div>
