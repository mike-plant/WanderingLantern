<!-- Hero Section with Storefront Image -->
<div class="hero" id="hero">
    {% if features.homepage.showCountdown %}
    <div class="hero-opening-banner">
        <h1>Cleveland's First Children's Bookstore</h1>
        <div class="countdown" id="countdown">23</div>
        <div class="countdown-label">Days Until Grand Opening</div>
        <div class="date">Saturday, November 29th, 2025</div>
        <p class="hero-tagline">Join us for storytimes, events, and magical book discoveries</p>
        <div class="hero-cta-row">
            <a href="/events/" class="cta-button primary-cta">Explore Events</a>
            <a href="/signup/" class="cta-button secondary-outline">Get Updates</a>
        </div>
    </div>
    {% endif %}
</div>
