<!-- Contact Form Section -->
<section id="contact">
    <h2>Send Us a Message</h2>
    <p style="text-align: center; max-width: 600px; margin: 0 auto 2rem;">
        Have a question about our books? Curious about hosting an event? Just want to chat about a great story? Drop us a line.
    </p>
    <div class="form-container">
        <form action="https://formspree.io/f/xkgqdarv" method="POST" id="contact-form">
            <!-- Redirect to thank you page after submission -->
            <input type="hidden" name="_next" value="https://thewanderinglantern.com/thankyou/">

            <div class="form-group">
                <label for="name">Your Name</label>
                <input type="text" id="name" name="name" required>
            </div>

            <div class="form-group">
                <label for="email">Your Email</label>
                <input type="email" id="email" name="email" required>
            </div>

            <div class="form-group">
                <label for="message">Message</label>
                <textarea id="message" name="message" rows="5" required></textarea>
            </div>

            <div class="form-group" style="display: flex; align-items: center; gap: 0.5rem;">
                <input type="checkbox" id="newsletter" name="newsletter" value="yes" style="width: auto; margin: 0;">
                <label for="newsletter" style="margin: 0; font-weight: 400;">Keep me updated with your newsletter</label>
            </div>

            <button type="submit">Send Message</button>
        </form>
    </div>

</section>
